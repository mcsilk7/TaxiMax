@{
    ViewData["Title"] = "Auta";
}
<section class="py-5 bg-light">
  <div class="container">

    <!-- Wprowadzenie -->
    <h2 class="text-center mb-4">Nasze auta</h2>
    <p class="text-center text-muted mb-5">
      Oferujemy szeroką gamę pojazdów dopasowanych do Twoich potrzeb.
    </p>

    <!-- Lista aut -->
    <div class="row g-4">

      <!-- 1. Klasa standard -->
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card h-100 shadow-sm">
          <img src="~/img/auto1.png" class="card-img-top" alt="Klasa standard">
          <div class="card-body">
            <h5 class="card-title">Klasa standard – 2023</h5>
            <p class="card-text">Idealne do codziennych przejazdów po mieście, komfortowe i ekonomiczne.</p>
            <ul class="list-unstyled mb-2">
              <li><i class="bi bi-people-fill me-2"></i>4 miejsca</li>
              <li><i class="bi bi-snow me-2"></i>Klima</li>
              <li><i class="bi bi-wifi me-2"></i>WiFi</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- 2. Klasa premium -->
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card h-100 shadow-sm">
          <img src="~/img/auto2.png" class="card-img-top" alt="Klasa premium">
          <div class="card-body">
            <h5 class="card-title">Klasa premium – 2023</h5>
            <p class="card-text">Luksus i wygoda na najwyższym poziomie, idealne dla wymagających klientów.</p>
            <ul class="list-unstyled mb-2">
              <li><i class="bi bi-people-fill me-2"></i>4 miejsca</li>
              <li><i class="bi bi-snow me-2"></i>Klima</li>
              <li><i class="bi bi-wifi me-2"></i>WiFi</li>
              <li><i class="bi bi-baby me-2"></i>ISOFIX</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- 3. Busy 7–9 osób -->
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card h-100 shadow-sm">
          <img src="~/img/auto3.png" class="card-img-top" alt="Busy 7-9 osób">
          <div class="card-body">
            <h5 class="card-title">Busy 7–9 osób – 2022</h5>
            <p class="card-text">Doskonałe dla większych grup, wygodne i przestronne wnętrze.</p>
            <ul class="list-unstyled mb-2">
              <li><i class="bi bi-people-fill me-2"></i>7–9 miejsc</li>
              <li><i class="bi bi-snow me-2"></i>Klima</li>
              <li><i class="bi bi-wifi me-2"></i>WiFi</li>
              <li><i class="bi bi-bag-fill me-2"></i>Duży bagażnik</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- 4. Auta ekologiczne -->
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card h-100 shadow-sm">
          <img src="~/img/auto4.png" class="card-img-top" alt="Auta ekologiczne">
          <div class="card-body">
            <h5 class="card-title">Auta ekologiczne – 2023</h5>
            <p class="card-text">Hybrydy i elektryki, ekologiczne i ciche, idealne do miasta.</p>
            <ul class="list-unstyled mb-2">
              <li><i class="bi bi-people-fill me-2"></i>4 miejsca</li>
              <li><i class="bi bi-battery-full me-2"></i>Hybryda / Elektryk</li>
              <li><i class="bi bi-snow me-2"></i>Klima</li>
            </ul>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
