@{
    ViewData["Title"] = "Ceny";
}
<section class="py-5 bg-light">
  <div class="container">

    <h2 class="text-center mb-5">Taryfy i opłaty</h2>

    <div class="row g-4">

      <!-- Opłata startowa -->
      <div class="col-12 col-md-6">
        <div class="d-flex p-3 bg-white shadow-sm rounded">
          <i class="bi bi-flag fs-2 me-3 text-primary"></i>
          <div>
            <h5 class="mb-1">Opłata startowa</h5>
            <p class="text-muted mb-0">Pobierana na początku każdego przejazdu.</p>
          </div>
        </div>
      </div>

      <!-- Cena za kilometr -->
      <div class="col-12 col-md-6">
        <div class="d-flex p-3 bg-white shadow-sm rounded">
          <i class="bi bi-rulers fs-2 me-3 text-primary"></i>
          <div>
            <h5 class="mb-1">Cena za kilometr</h5>
            <p class="text-muted mb-0">Uczciwa i stała stawka za każdy przejechany kilometr.</p>
          </div>
        </div>
      </div>

      <!-- Cena za noc / święta -->
      <div class="col-12 col-md-6">
        <div class="d-flex p-3 bg-white shadow-sm rounded">
          <i class="bi bi-moon-stars fs-2 me-3 text-primary"></i>
          <div>
            <h5 class="mb-1">Cena za noc / święta</h5>
            <p class="text-muted mb-0">Dodatkowy koszt obowiązujący w godzinach nocnych i w dni świąteczne.</p>
          </div>
        </div>
      </div>

      <!-- Opłata za postój -->
      <div class="col-12 col-md-6">
        <div class="d-flex p-3 bg-white shadow-sm rounded">
          <i class="bi bi-hourglass-split fs-2 me-3 text-primary"></i>
          <div>
            <h5 class="mb-1">Opłata za postój</h5>
            <p class="text-muted mb-0">Dotyczy sytuacji, w których kierowca musi oczekiwać.</p>
          </div>
        </div>
      </div>

      <!-- Stałe ceny na lotnisko, dworzec -->
      <div class="col-12">
        <div class="d-flex p-3 bg-white shadow-sm rounded">
          <i class="bi bi-geo-alt fs-2 me-3 text-primary"></i>
          <div>
            <h5 class="mb-1">Stałe ceny na lotnisko i dworzec</h5>
            <p class="text-muted mb-0">Oferujemy stałe, z góry ustalone ceny na wybrane kierunki, takie jak lotnisko czy dworzec.</p>
          </div>
        </div>
      </div>

    </div>

    <!-- Przykładowe kalkulacje -->
    <h3 class="text-center mt-5 mb-4">Przykładowe kalkulacje przejazdów</h3>

    <div class="row g-4">
      <div class="col-12 col-md-4">
        <div class="bg-white p-4 shadow-sm rounded">
          <h5 class="mb-2">Centrum → Dworzec</h5>
          <p class="text-muted mb-0">Przykładowa cena: <strong>25–35 zł</strong></p>
        </div>
      </div>

      <div class="col-12 col-md-4">
        <div class="bg-white p-4 shadow-sm rounded">
          <h5 class="mb-2">Centrum → Lotnisko</h5>
          <p class="text-muted mb-0">Przykładowa cena: <strong>50–70 zł</strong></p>
        </div>
      </div>

      <div class="col-12 col-md-4">
        <div class="bg-white p-4 shadow-sm rounded">
          <h5 class="mb-2">Dworzec → Twoje osiedle</h5>
          <p class="text-muted mb-0">Przykładowa cena: <strong>15–25 zł</strong></p>
        </div>
      </div>
    </div>

    <!-- Informacja o płatnościach -->
    <div class="text-center mt-5">
      <i class="bi bi-credit-card-2-front fs-2 text-primary"></i>
      <h4 class="mt-2">Akceptujemy płatności</h4>
      <p class="text-muted fs-5">
        Gotówka, karty płatnicze, BLIK, płatność online.
      </p>
    </div>

  </div>
</section>
