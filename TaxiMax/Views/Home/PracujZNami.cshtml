@{
    ViewData["Title"] = "Pracuj Z Nami";
}

<section class="py-5 bg-light">
  <div class="container">

    <!-- Nagłówek -->
    <h2 class="text-center mb-4">Dołącz do naszego zespołu kierowców!</h2>
    <p class="text-center text-muted mb-5">
      Szukamy osób zmotywowanych, odpowiedzialnych i gotowych do współpracy.
    </p>

    <div class="row g-4">

      <!-- Korzyści pracy -->
      <div class="col-12 col-md-6">
        <div class="card shadow-sm p-4 mb-4">
          <h4 class="mb-3">Korzyści pracy</h4>
          <ul class="list-unstyled">
            <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>Elastyczny grafik</li>
            <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>Atrakcyjne wynagrodzenie</li>
            <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>Szkolenie i wsparcie</li>
            <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>Możliwość jazdy własnym lub firmowym autem</li>
          </ul>
        </div>

        <!-- Wymagania -->
        <div class="card shadow-sm p-4">
          <h4 class="mb-3">Wymagania</h4>
          <ul class="list-unstyled">
            <li class="mb-2"><i class="bi bi-check2-square text-primary me-2"></i>Prawo jazdy kat. B</li>
            <li class="mb-2"><i class="bi bi-check2-square text-primary me-2"></i>Niekaralność</li>
            <li class="mb-2"><i class="bi bi-check2-square text-primary me-2"></i>Kultura osobista</li>
            <li class="mb-2"><i class="bi bi-check2-square text-primary me-2"></i>Mile widziane doświadczenie</li>
          </ul>
        </div>
      </div>

      <!-- Formularz zgłoszeniowy -->
      <div class="col-12 col-md-6">
        <div class="card shadow-sm p-4">
          <h4 class="mb-3 text-center">Formularz zgłoszeniowy</h4>
          <form>
            <div class="mb-3">
              <label for="applicant-name" class="form-label">Imię i nazwisko</label>
              <input type="text" class="form-control" id="applicant-name" placeholder="Jan Kowalski" required>
            </div>

            <div class="mb-3">
              <label for="applicant-phone" class="form-label">Telefon</label>
              <input type="tel" class="form-control" id="applicant-phone" placeholder="+48 600 000 000" required>
            </div>

            <div class="mb-3">
              <label for="applicant-email" class="form-label">E-mail</label>
              <input type="email" class="form-control" id="applicant-email" placeholder="jan.kowalski@email.com" required>
            </div>

            <div class="mb-3">
              <label for="applicant-experience" class="form-label">Doświadczenie</label>
              <textarea class="form-control" id="applicant-experience" rows="3" placeholder="Opisz swoje doświadczenie"></textarea>
            </div>

            <button type="submit" class="btn btn-primary w-100">Aplikuj</button>
          </form>
        </div>
      </div>

    </div>

  </div>
</section>
