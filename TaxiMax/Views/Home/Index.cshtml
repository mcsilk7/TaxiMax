@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid text-center tytul box">
    <h1 class="display-4 white">Szybko. Bezpiecznie. Profesjonalnie. Twoje Taxi 24/7.</h1>
    @if (User.Identity.IsAuthenticated){
        <a class="btn btn-primary call-taxi" asp-action="ZamowTaxi">Zamów Taxi</a>
    }
    else
    {
        <a class="btn btn-primary call-taxi" asp-area="Identity" asp-page="/Account/Login">Zamów Taxi</a>
    }

</div>
<section class="py-5 bg-light">
    <div class="container">
      <div class="row align-items-center mb-4">
        <div class="col-md-8">
          <h2 class="mb-1">Dlaczego my?</h2>
          <p class="mb-0 text-muted">Wybierz nas — sprawdzona jakość i wygoda przy każdym przejeździe.</p>
        </div>
      </div>

        <!-- Dlaczego my -->

      <div class="row g-4">
        <!-- 1 -->
        <div class="col-12 col-sm-6 col-md-3">
          <div class="card feature-card text-center p-3 h-100">
            <div class="mx-auto feature-icon bg-white" aria-hidden="true">
              <i class="bi bi-taxi-front"></i>
            </div>
            <div class="card-body p-0 mt-3">
              <h5 class="feature-title">Nowoczesna flota</h5>
              <p class="feature-desc">Komfortowe i regularnie serwisowane samochody.</p>
            </div>
          </div>
        </div>

        <!-- 2 -->
        <div class="col-12 col-sm-6 col-md-3">
          <div class="card feature-card text-center p-3 h-100">
            <div class="mx-auto feature-icon bg-white" aria-hidden="true">
              <i class="bi bi-clock"></i>
            </div>
            <div class="card-body p-0 mt-3">
              <h5 class="feature-title">Dostępność 24/7</h5>
              <p class="feature-desc">Jesteśmy dostępni zawsze, gdy nas potrzebujesz.</p>
            </div>
          </div>
        </div>

        <!-- 3 -->
        <div class="col-12 col-sm-6 col-md-3">
          <div class="card feature-card text-center p-3 h-100">
            <div class="mx-auto feature-icon bg-white" aria-hidden="true">
              <i class="bi bi-person-badge"></i>
            </div>
            <div class="card-body p-0 mt-3">
              <h5 class="feature-title">Profesjonalni kierowcy</h5>
              <p class="feature-desc">Doświadczenie i wysoka kultura osobista.</p>
            </div>
          </div>
        </div>

        <!-- 4 -->
        <div class="col-12 col-sm-6 col-md-3">
          <div class="card feature-card text-center p-3 h-100">
            <div class="mx-auto feature-icon bg-white" aria-hidden="true">
              <i class="bi bi-credit-card-2-back"></i>
            </div>
            <div class="card-body p-0 mt-3">
              <h5 class="feature-title">Wygodne płatności</h5>
              <p class="feature-desc">Karta, gotówka, BLIK — wybierz najwygodniejszą dla siebie opcję.</p>
            </div>
          </div>
        </div>
      </div>

    </div>
  </section>

